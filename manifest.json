{
  "manifest_version": 2,
  "name": "自动消耗漫读券",
  "version": "1.0",
  "page_action":
  {
    "default_icon": {
      "16":"images/16.png",
      "24":"images/24.png",
      "32":"images/32.png"
    },
    "default_title": "自动消耗漫读券",
    "default_popup": "popup.html"
  },
  "permissions":[
  	"*://manga.bilibili.com/detail/*",
    "tabs",
    "activeTab",
    "declarativeContent"
  ],
  "background":{
  	"scripts":["background.js"],
  	"persistent":false
  }
}